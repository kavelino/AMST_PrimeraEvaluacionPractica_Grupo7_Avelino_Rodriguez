<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="349dp"
        android:layout_height="269dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_megacine"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="TRIVIA MAGICA"
        android:layout_marginTop="25dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Si aciertas 5 preguntas\nTe ganas un entrada\nal cine, gracias a MG"
        android:gravity="center"
         />

    <Button
        android:id="@+id/btnEmpezar"
        android:layout_width="334dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:text="EMPEZAR"
        android:layout_marginTop="50dp"
        android:onClick="empezarTrivia"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Desarrollado por Avelino Kleber y Rodriguez Victor"
        android:layout_marginTop="50dp"
         />


</LinearLayout>